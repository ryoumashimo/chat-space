.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('fas', 'edit', class: 'top-icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'top-icon')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group-lists" do
          .group-name
            = group.name
          .group-message
            = group.show_last_message